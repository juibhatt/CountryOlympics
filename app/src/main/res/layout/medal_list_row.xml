<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
    <TextView
        android:id="@+id/id_country_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingLeft="35dp"
        android:text="12"
        />

    <TextView
        android:id="@+id/id_country_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/id_country_rank"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/id_gold_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/id_country_alias"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/id_silver_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/id_gold_count"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/id_bronze_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/id_silver_count"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/id_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/id_bronze_count"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />
</RelativeLayout>